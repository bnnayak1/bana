pipeline {
    agent any
    parameters {
        choice(name: 'ENVIRONMENT', choices: ['dev', 'qa', 'prod'], description: 'Which environment to deploy to')
        string(name: 'TAG', defaultValue: 'latest', description: 'Docker image tag to deploy')
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Deploy') {
            when {
                expression { params.ENVIRONMENT != 'dev' }
            }
            steps {
                sh "docker build -t myapp:${params.TAG} ."
                sh "docker push myapp:${params.TAG}"
                sh "deploy.sh ${params.ENVIRONMENT} ${params.TAG}"
            }
        }
    }
}
